<!DOCTYPE html>
<html>
<head>
  <title>YellowOrchids</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
      <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Yellow Orchids</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                 <div class="navbar-header">
                    <%= link_to 'Yurt-O-Happiness', root_path, class: 'navbar-brand' %>
                </div>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <% if current_user %>
                  <ul class="nav navbar-nav pull-right">
                    <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
                    <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
                  </ul>
                <% else %>
                  <ul class="nav navbar-nav">
                    <li><%= link_to 'Google+', '/auth/google' %></li>
                  </ul>
                <% end %>
                    <li class="glyphicon glyphicon-shopping-cart pull-right">
                       <% if @cart %>
                        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                          <%= render @cart %>
                        <% end %>
                      <% end %>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->

        </div>



    </div>

        <!-- /.container -->
    </nav>

    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</body>
</html>
