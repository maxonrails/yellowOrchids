<h1>Listing flowers</h1>

<table>
<% @flowers.each do |flower| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(flower.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= flower.name %></dt>
        <dd><%= truncate(flower.description, length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', flower %><br/>
      <%= link_to 'Edit', edit_flower_path(flower) %><br/>
      <%= link_to 'Destroy', flower, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New flower', new_flower_path %>
